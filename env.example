# ===========================================
# SMART WARDROBE - PRODUCTION ENVIRONMENT
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# Server Configuration
PORT=8000
NODE_ENV=production

# Database Configuration (MongoDB Atlas)
# Get from: https://mongodb.com/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smart-wardrobe

# JWT Authentication (Generate a strong secret)
# Use: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters

# Cloudinary Image Storage (Required)
# Get from: https://cloudinary.com dashboard
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Google Gemini AI (Required for clothing analysis)
# Get from: https://aistudio.google.com
GEMINI_API_KEY=your_gemini_api_key_here

# OpenWeather API (Required for weather-based recommendations)
# Get from: https://openweathermap.org
OPENWEATHER_API_KEY=your_openweather_api_key_here

# CORS Configuration (for production)
FRONTEND_URL=https://your-app.vercel.app
ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=20

# API Timeouts
GEMINI_TIMEOUT=30000
CLOUDINARY_TIMEOUT=120000
WEATHER_TIMEOUT=10000
